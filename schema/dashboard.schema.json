{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/plash-dashboard.schema.json",
  "title": "Plash Dashboard Contract",
  "type": "object",
  "required": ["version", "generated_at", "title", "ui", "sections"],
  "properties": {
    "version": { "type": "string", "pattern": "^3\\.[0-9]+$" },
    "generated_at": { "type": "string", "format": "date-time" },
    "ttl_seconds": { "type": "integer", "minimum": 5 },
    "title": { "type": "string", "minLength": 1 },
    "summary": { "type": "string" },
    "ui": {
      "type": "object",
      "required": ["timezone", "motion", "gutters"],
      "properties": {
        "timezone": { "type": "string", "minLength": 1 },
        "motion": { "type": "string", "enum": ["none", "subtle"] },
        "gutters": {
          "type": "object",
          "required": ["top", "bottom", "side"],
          "properties": {
            "top": { "type": "integer", "minimum": 0 },
            "bottom": { "type": "integer", "minimum": 0 },
            "side": { "type": "integer", "minimum": 0 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "label", "cards"],
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "label": { "type": "string", "minLength": 1 },
          "hidden": { "type": "boolean" },
          "order": { "type": "integer" },
          "layout": { "$ref": "#/$defs/layout" },
          "cards": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "title"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "title": { "type": "string", "minLength": 1 },
                "url": { "type": "string" },
                "description": { "type": "string" },
                "long_description": { "type": "string" },
                "hidden": { "type": "boolean" },
                "priority": { "type": "integer" },
                "layout": { "$ref": "#/$defs/layout" },
                "chart": { "$ref": "#/$defs/chart" }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    },
    "alerts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "severity", "message"],
        "properties": {
          "id": { "type": "string" },
          "severity": { "type": "string", "enum": ["info", "warning", "critical"] },
          "message": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "$defs": {
    "layout": {
      "type": "object",
      "properties": {
        "span": { "type": "integer", "minimum": 1, "maximum": 12 },
        "priority": { "type": "integer" }
      },
      "additionalProperties": false
    },
    "chart": {
      "type": "object",
      "required": ["kind", "points"],
      "properties": {
        "kind": { "type": "string", "enum": ["sparkline", "bars"] },
        "points": {
          "type": "array",
          "minItems": 2,
          "items": { "type": "number" }
        },
        "unit": { "type": "string" },
        "label": { "type": "string" }
      },
      "additionalProperties": false
    }
  }
}
